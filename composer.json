{
  "name": "moe-mizrak/validator-guard",
  "description": "ValidatorGuard enables attribute-driven validation to control Laravel method behavior.",
  "keywords": [
    "Moe Mizrak",
    "laravel",
    "laravel-validator-guard",
    "ValidatorGuard",
    "permission",
    "state",
    "dependency",
    "validation",
    "Attributes",
    "Attribute Validation"
  ],
  "type": "package",
  "homepage": "https://github.com/moe-mizrak/validator-guard",
  "license": "MIT",
  "authors": [
    {
      "name": "Moe Mizrak"
    }
  ],
  "require": {
    "php": "^8.2",
    "moe-mizrak/validator-guard-core": "^1.0"
  },
  "require-dev": {
    "orchestra/testbench": "^9.6.1",
    "phpunit/phpunit": "^11.4",
    "fakerphp/faker": "^1.24.1"
  },
  "autoload": {
    "psr-4": {
      "MoeMizrak\\ValidatorGuard\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MoeMizrak\\ValidatorGuard\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "MoeMizrak\\ValidatorGuard\\ValidatorGuardServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
